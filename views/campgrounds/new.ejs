<%- include("../partials/header") %>
<div class="container" >
	<div class="row">
		<h1 style="text-align:center; margin-bottom:2%">Add new campground</h1>
		<div style="width:35%; margin:10px auto" >
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="campground[name]">Name</label>
					<input class="form-control" type="text" name="campground[name]">
				</div>
				<div class="form-group">
					<label for="campground[img]">URL img</label>
					<input class="form-control" type="url" name="campground[img]"> 
				</div>
				<div class="form-group">
					<label for="campground[description]">Description</label>
					<textarea class="form-control" name="campground[description]" value="Description"></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-block" style="margin-top:10px" type="submit">
				</div>
			</form>
			<a class="" href="/campgrounds">Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>
