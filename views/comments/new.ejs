<%- include("../partials/header") %>
<div class="container" >
	<div class="row">
		<h1 style="text-align:center; margin-bottom:2%">Add new Comment</h1>
		<div style="width:35%; margin:10px auto" >
			<form action="/campgrounds/<%=camp._id %>/comments" method="POST">
				<div class="form-group">
					<label for="comment[content]">Comment</label>
					<textarea class="form-control" name="comment[content]"></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-block" style="margin-top:10px" type="submit">
				</div>
			</form>
			<a class="" href="/campgrounds/<%= camp._id %>">Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>